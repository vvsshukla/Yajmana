<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:fillViewport="true"
tools:context=".DetailFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="40dp">

    <TextView
        android:id="@+id/swa_vyaktichi_mahiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/swa_vyaktichi_mahiti"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/swa_vyaktichi_mahiti"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/person_s_photo"
        android:padding="4dp"
        android:src="@drawable/client" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LayoutFullName"
        android:layout_below="@+id/imageView"
        android:weightSum="2">

        <TextView
            android:id="@+id/full_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/full_name_label"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/full_name_label"
            android:importantForAutofill="no"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/oval"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutFullName"
        android:orientation="horizontal"
        android:weightSum="1"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/LayoutTwoOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <!-- gaon -->
            <TextView
                android:id="@+id/city_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/city_label"
                android:importantForAutofill="no"
                android:padding="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/city"
                android:layout_below="@+id/city_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/city_label"
                android:importantForAutofill="no"
                android:padding="10dp"
                android:textSize="14sp"
                android:background="@drawable/oval"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LayoutTwoTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">

        <!-- taluka -->
        <TextView
            android:id="@+id/taluka_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/city_label"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/taluka"
            android:layout_below="@+id/taluka_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/taluka_lable"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:textSize="14sp"
            android:background="@drawable/oval"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutTwo"
        android:weightSum="1"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/LayoutThreeOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <!-- gaon -->
            <TextView
                android:id="@+id/district_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/city_label"
                android:importantForAutofill="no"
                android:padding="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/district"
                android:importantForAutofill="no"
                android:layout_below="@+id/district_lable"
                android:padding="10dp"
                android:background="@drawable/oval" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LayoutThreeTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/caste_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/caste_label"
                android:importantForAutofill="no"
                android:padding="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/caste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/caste_lable"
                android:hint="@string/caste"
                android:importantForAutofill="no"
                android:padding="10dp"
                android:background="@drawable/oval"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutThree"
        android:orientation="horizontal"
        android:weightSum="1"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/LayoutFourOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/tithi_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_death_label"
                android:importantForAutofill="no"
                android:padding="10dp"
                android:textSize="14sp" />

            <!-- tithi  -->
            <TextView
                android:id="@+id/death_anniversary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_death"
                android:importantForAutofill="no"
                android:layout_below="@+id/tithi_lable"
                android:padding="10dp"
                android:background="@drawable/oval" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LayoutFourTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/relation_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/caste_label"
                android:importantForAutofill="no"
                android:padding="10dp"
                android:textSize="14sp" />

            <!-- relation  -->
            <TextView
                android:id="@+id/relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/relation_label"
                android:importantForAutofill="no"
                android:layout_below="@+id/relation_label"
                android:padding="10dp"
                android:background="@drawable/oval"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutFour"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/genderValue"
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="14sp"
            android:hint="@string/gender_hint"
            android:background="@drawable/oval"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutFive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutGender"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pooja_person_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/relative_details"
            android:textSize="18sp"
            />

<!--        <TextView-->
<!--            android:id="@+id/pooja_person_vanshawal"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:text="@string/add_button_tip" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutSix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutFive"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- tumche purna nav -->

        <TextView
            android:id="@+id/your_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_full_name_label"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:background="@drawable/oval"/>

        <TextView
            android:id="@+id/fathers_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fathers_full_name"
            android:importantForAutofill="no"
            android:padding="10dp" android:layout_marginTop="10dp"
            android:background="@drawable/oval"/>

        <!-- vadilanche purna nav -->

        <TextView
            android:id="@+id/mothers_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/mothers_full_name"
            android:importantForAutofill="no"
            android:padding="10dp" android:layout_marginTop="10dp"
            android:background="@drawable/oval"/>

        <TextView
            android:id="@+id/grandpa_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/grandpa_name"
            android:importantForAutofill="no"
            android:padding="10dp" android:layout_marginTop="10dp"
            android:background="@drawable/oval"/>

        <TextView
            android:id="@+id/panjoba_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/panjoba_name"
            android:importantForAutofill="no"
            android:padding="10dp" android:layout_marginTop="10dp"
            android:background="@drawable/oval"/>

        <TextView
            android:id="@+id/ni_panjoba_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/ni_panjoba_name"
            android:importantForAutofill="no"
            android:padding="10dp" android:layout_marginTop="10dp"
            android:background="@drawable/oval"/>

        <!-- Real Uncle NAme -->
        <TextView
            android:id="@+id/real_uncle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/real_uncle_name"
        android:background="@drawable/oval"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/real_uncle_name"
    android:ems="10"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

</LinearLayout>

        <TextView
            android:id="@+id/cousin_uncle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="@string/cousin_uncle_name"
            android:padding="10dp"
            android:background="@drawable/oval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cousin_uncle_name"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/real_uncle_son"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/real_uncle_son_name"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:background="@drawable/oval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/real_uncle_son_name"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/cousin_uncle_son"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/cousin_uncle_son_name"
            android:importantForAutofill="no"
            android:layout_marginTop="20dp" android:padding="10dp"
            android:textSize="18sp"
            android:background="@drawable/oval"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cousin_uncle_son_name"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <!-- Real Brother Name -->
        <TextView
            android:id="@+id/real_brother"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/real_brother_name"
            android:importantForAutofill="no"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:background="@drawable/oval"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/real_brother_name"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <!-- Real Brother Son -->
        <TextView
           android:id="@+id/real_brother_son"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/real_brother_son_name"
           android:importantForAutofill="no"
           android:layout_marginTop="20dp"
           android:textSize="18sp"
           android:padding="10dp" android:background="@drawable/oval"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/real_brother_son_name"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/son"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/son_name"
            android:importantForAutofill="no"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/oval"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/son_name"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/mobile_no"
            android:importantForAutofill="no"
            android:textSize="18sp"
            android:padding="10dp" android:layout_marginTop="20dp"
            android:background="@drawable/oval"/>

        <TextView
            android:id="@+id/mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="18sp"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/tip"
            android:importantForAutofill="no"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/oval"/>

        <TextView
            android:id="@+id/tipText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:importantForAutofill="no"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:background="@drawable/oval">

            <TextView
                android:id="@+id/signatureLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signature"
                android:importantForAutofill="no"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/signatureImage"
                android:layout_weight="1"
                android:padding="10dp"
                android:contentDescription="@string/signature" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

</androidx.core.widget.NestedScrollView>